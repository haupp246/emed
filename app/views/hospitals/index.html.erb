<p id="notice"><%= notice %></p>

<h1>Listing Hospitals</h1>

<table class="ui fixed striped sortable celled table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Website</th>
      <th>Email</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hospitals.each do |hospital| %>
      <tr>
        <td><%= hospital.code %></td>
        <td><%= hospital.name %></td>
        <td><%= hospital.address %></td>
        <td><%= hospital.phone %></td>
        <td><%= hospital.fax %></td>
        <td><%= hospital.website %></td>
        <td><%= hospital.email %></td>
        <td><%= hospital.user.email %></td>
        <td><%= link_to 'Show', hospital %></td>
        <td><%= link_to 'Edit', edit_hospital_path(hospital) %></td>
        <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

