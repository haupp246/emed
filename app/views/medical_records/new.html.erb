<div class= "ui container" > 
<h1>New Medical Record</h1>
<% if @patients %>
 <div class="ui secondary menu">
    <div class="right menu">
      <div class="item" >
          <%= form_tag new_medical_record_template_medical_record_path, method: :get do %>
          <div class="ui action left icon input">
              <i class="search icon"></i>
              <%= text_field_tag :search, params[:search],placeholder: 'patientID or name...' %>
              <%= button_tag "Search", name: nil, class: "ui teal button", data: {disable_with: "<i class='fa fa-spinning fa-fw'></i> Searching..."} %>
          </div>
          <% end %>
        
      </div>
    </div>
  </div>
<div>
  
    <table class="ui fixed striped sortable celled table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Dob</th>
      <th>Job</th>
      <th>Ethnic</th>
      <th>Oversea</th>
      <th>Address</th>
      <th>Workplace</th>
   
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.id %></td>
        <td><%= patient.name %></td>
        <td><%= patient.dob.to_date %></td>
        <td><%= patient.job %></td>
        <td><%= patient.ethnic %></td>
        <td><%= patient.oversea %></td>
        <td><%= patient.address %></td>
        <td><%= patient.workplace %></td>
     
      </tr>
    <% end %>
 
  </tbody>
       
</table>
 <%= will_paginate @patients %>
</div>
<% end %>

<%= render 'form' %>

<%= link_to 'Back',medical_record_template_medical_records_path %>
</div>