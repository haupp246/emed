

<h1>Listing Service Requests</h1>

<table class="ui fixed striped sortable celled table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Duration</th>
      <th>Created at</th>
      <th>Status</th>
      <th>Replied at</th>


    </tr>
  </thead>

  <tbody>

    <% @service_requests.each do |service_request| %>
      <tr>
        <td><%= service_request.sp_type %></td>
        <td><%= service_request.time %></td>
        <td><%= service_request.created_at %></td>
        <td><%= service_request.status %></td>
        <td><%= service_request.replied_at %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Service request', new_hospital_service_request_path %>
